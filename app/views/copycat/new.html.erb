<h1>Welcome to Copycat!</h1>

<%= form_with url: '/copycat/reply', method: 'post' do |f| %>
  <%= f.label :user_input, "Enter your input:" %>
  <%= f.text_field :user_input %>
  <%= f.submit "Submit" %>
<% end %>

<%= form_with url: '/copycat/reverse', method: 'post' do |f| %>
  <%= f.text_field :user_input %>
  <%= f.submit "Reverse" %>
<% end %>